<section class="mb-5">
    <div class="row g-4">
        <div class="col-12 col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h4>Nuevo usuario</h4>
                </div>
                <div class="card-body">
                    <p class="mb-0">Dar de alta a un nuevo cliente o trabajador.</p>
                </div>
                <div class="card-footer">
                    <a href="/settings/users/add" class="btn btn-primary">Añadir usuario</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="mb-5">
    <h1>Clientes</h1>
    <div class="card h-100">
        <div class="card-body">
            <% if (clients.length > 0) { %>
                <table class="table table-striped align-middle mb-0">
                    <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Correo electrónico</th>
                        <th>Empresa</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <% clients.forEach(client => { %>
                        <tr>
                            <td><%= client.name %></td>
                            <td><%= client.email %></td>
                            <td>
                                <% if (client.company) { %>
                                    <%= client.company.name %>
                                <% } else { %>
                                    —
                                <% } %>
                            </td>
                            <td class="text-end">
                                <a href="/settings/users/edit/<%= client.id %>" class="btn btn-sm btn-outline-primary border-0">
                                    <i class="fa-solid fa-pencil"></i>
                                    <span class="d-none d-sm-inline ms-1">Editar</span>
                                </a>
                                <a href="/settings/users/delete/<%= client.id %>" class="btn btn-sm
                                    btn-outline-danger border-0">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <div class="text-center py-4">No hay clientes registrados.</div>
            <% } %>
        </div>
    </div>
</section>

<section class="mb-5">
    <h1>Empleados</h1>
    <div class="card h-100">
        <div class="card-body">
            <% if (employees.length > 0) { %>
                <table class="table table-striped align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Correo electrónico</th>
                            <th>Rol</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% employees.forEach(client => { %>
                            <tr>
                                <td><%= client.name %></td>
                                <td><%= client.email %></td>
                                <td>
                                    <% if (client.role === 'admin') { %>
                                        Administrador
                                    <% } else if (client.role === 'employee') { %>
                                        Empleado
                                    <% } else { %>
                                        Gerente
                                    <% } %>
                                </td>
                                <td class="text-end">
                                    <a href="/settings/users/edit/<%= client.id %>" class="btn btn-sm btn-outline-primary border-0">
                                        <i class="fa-solid fa-pencil"></i>
                                        <span class="d-none d-sm-inline ms-1">Editar</span>
                                    </a>
                                    <a href="/settings/users/delete/<%= client.id %>" class="btn btn-sm btn-outline-danger border-0">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <div class="text-center py-4">No hay empleados registrados.</div>
            <% } %>
        </div>
    </div>
</section>

<% if (deleted.length > 0) { %>
    <section class="mb-5">
        <h1>Eliminados</h1>
        <div class="card h-100">
            <div class="card-body">
                <table class="table table-striped align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Correo electrónico</th>
                            <th>Rol</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% deleted.forEach(client => { %>
                            <tr>
                                <td><%= client.name %></td>
                                <td><%= client.email %></td>
                                <td>
                                    <% if (client.role === 'admin') { %>
                                        Administrador
                                    <% } else if (client.role === 'employee') { %>
                                        Empleado
                                    <% } else { %>
                                        Gerente
                                    <% } %>
                                </td>
                                <td class="text-end">
                                    <a href="/settings/users/restore/<%= client.id %>" class="btn btn-sm btn-outline-primary border-0">
                                        <i class="fa-solid fa-undo"></i>
                                        <span class="d-none d-sm-inline ms-1">Restaurar</span>
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
<% } %>
